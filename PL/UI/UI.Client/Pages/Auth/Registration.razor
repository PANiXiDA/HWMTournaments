@page "/register"

<div class="registration-card">
    <h2 class="registration-title">Регистрация</h2>

    <EditForm Model="@_registrationRequest" OnValidSubmit="HandleRegistration" class="form-container">
        <DataAnnotationsValidator />
        <ValidationSummary class="validation-summary" />

        <div class="form-group">
            <label class="form-label" for="name">@_registrationRequest.GetDisplayName(property => property.Name)</label>
            <InputText id="name" @bind-Value="_registrationRequest.Name" class="form-input" />
        </div>

        <div class="form-group">
            <label class="form-label" for="email">@_registrationRequest.GetDisplayName(property => property.Email)</label>
            <InputText id="email" @bind-Value="_registrationRequest.Email" class="form-input" />
        </div>

        <div class="form-group">
            <label class="form-label" for="password">@_registrationRequest.GetDisplayName(property => property.Password)</label>
            <InputText id="password" @bind-Value="_registrationRequest.Password" type="password" class="form-input" />
        </div>

        <button type="submit" class="submit-button" disabled="@_isSubmitting">
            @(_isSubmitting ? "Отправка…" : "Зарегистрироваться")
        </button>
    </EditForm>
</div>
