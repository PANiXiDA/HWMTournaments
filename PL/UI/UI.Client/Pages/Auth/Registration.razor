@page "/register"

<div class="registration-root">
    <EditForm Model="@registrationModel" OnValidSubmit="HandleValidSubmit" class="form-container">
        <DataAnnotationsValidator />
        <ValidationSummary class="validation-summary" />

        <div class="form-group">
            <label class="form-label" for="name">@registrationModel.GetDisplayName(property => property.Name)</label>
            <InputText id="name" @bind-Value="registrationModel.Name" class="form-input" />
        </div>

        <div class="form-group">
            <label class="form-label" for="name">@registrationModel.GetDisplayName(property => property.Email)</label>
            <InputText id="email" @bind-Value="registrationModel.Email" class="form-input" />
        </div>

        <div class="form-group">
            <label class="form-label" for="name">@registrationModel.GetDisplayName(property => property.Password)</label>
            <InputText id="password" @bind-Value="registrationModel.Password" type="password" class="form-input" />
        </div>

        <button type="submit" class="submit-button">Зарегистрироваться</button>
    </EditForm>
</div>
